<fieldset class="none-bs-fieldset">
  <br>
  <h6>Details</h6>
  <table class="table table-bordered table-striped">
    <tbody>
    <thead class="thead-light">
    <tr>
      <th>Patient No</th>
      <th>Patient Name</th>
      <th>Ward No</th>
      <th>Ward Name</th>
    </tr>
    </thead>
    <tbody>
    <%# patient_card_admission = admissions.where(admissionDate: Date.today.beginning_of_week).first %>
    <%# if patient_card_admission.blank? %>
    <!--<tr>-->
    <!--<td colspan="5"><p>No patient found from this date.</p></td>-->
    <!--</tr>-->
    <%# #else %>
    <% patient = admission.patient %>
    <% ward = admission.ward %>
    <% prescriptions = patient&.prescriptions %>
    <tr>
      <td><%= patient.id %></td>
      <td><%= person_full_name_helper(patient) %></td>
      <td><%= ward.wardNumber %></td>
      <td><%= ward.name %></td>
    </tr>
    <%#end%>
    </tbody>
  </table>
  <br>
  <br>
  <h6>Drug Prescriptions</h6>
  <table class="table table-bordered table-striped">
    <thead class="thead-light">
    <tr>
      <th>Date</th>
      <th>Drug Code</th>
      <th>Drug Name</th>
      <th>Dosage</th>
      <th>Length of Treatment</th>
    </tr>
    </thead>
    <tbody>
    <% if prescriptions %>
      <% prescriptions&.each do |prescription| %>
        <tr>
          <td><%= localize(prescription.date) %></td>
          <td>
            <% prescription&.drugs.each do |drug| %>
              <%= drug.code %>
              <br>
            <% end %>
          </td>
          <td>
            <% prescription&.drugs.each do |drug| %>
              <%= drug.name %>
              <br>
            <% end %>
          </td>
          <td><%= prescription.dosage %></td>
          <td><%= prescription.treatmentLength %></td>
        </tr>
      <% end %>
    <% else %>
      <td colspan="3"><p>No medications found.</p></td>
    <% end %>
    </tbody>
  </table>
</fieldset>
