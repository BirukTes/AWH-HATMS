<h1>Ward List</h1>

<%= form_with(url: reports_ward_list_path, method: :get) do |ward_report_form| %>
  <div class="form-group" style="width: 35% !important;">
    <fieldset class="none-bs-fieldset">
      <legend class="none-bs-legend">Produce Report</legend>
      <table class="table borderless">
        <tbody>
        <tr>
          <td>
            <label>Ward</label><br/>
            <%= ward_report_form.select(:ward_id, ward_options, { type: 'date', include_blank: 'Select ward', id: 'ward_id' }, class: 'form-control') %>
          </td>
        </tr>
        <tr>
          <td>
            <label>From</label><br/>
            <%= ward_report_form.text_field(:from_date, { type: 'date', id: 'from_date', class: 'form-control', required: true }) %>
          </td>
          <td>
            <label>To</label><br/>
            <%= ward_report_form.text_field(:to_date, { type: 'date', id: 'to_date', class: 'form-control', required: true }) %>
          </td>
          <td>
            <br/>
            <br/>
            <%= ward_report_form.submit('Search', class: 'btn btn-primary', id: 'enable_form_submit', data: { disable_with: false }) %>
          </td>
          <t>
            <td>
              <%= link_to('Export as Excel', reports_ward_list_path(format: :xls), { class: 'btn btn-secondary form-control', role: 'button' }) %>
            </td>
          </t>
        </tr>
        </tbody>
      </table>
    </fieldset>
  </div>
<% end %>
&nbsp;
<div id="ward_list_holder">
  <%= render('home/ward_list', admissions: @admissions) %>
</div>
