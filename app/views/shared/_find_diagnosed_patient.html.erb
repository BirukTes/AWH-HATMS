<%# Local disables remote/ajax request so it reload the page %>
<fieldset class="none-bs-fieldset" style="width: 70%; !important;">
  <%= form_with(name: nil, url: action_controller_url, method: :get, local: true) do |form| %>
    <table class="table borderless">
      <tbody>
      <tr>
        <td class="form-group">
          <label>Ward</label><br/>
          <%# TODO add date range, to all date types %>
          <% %>
          <%= form.select(:ward_id, wards_option('wards_for_current_staff'), { include_blank: 'Select patient admission ward' }, { id: 'ward_id_select_find_admitted', required: true, class: 'form-control' }) %>
        </td>
        <td class="form-group">
          <label>Patient</label><br/>
          <%= form.select(:patient_id, {}, { include_blank: 'Select patient' }, { id: 'patient_id_select_find_diagnosed', disabled: true, required: true, class: 'form-control' }) %>
          <br/>
        </td>
        <td class="form-group">
          <label>Diagnosis</label><br/>
          <%= form.select(:diagnosis_id, {}, { include_blank: 'Select Diagnosis' }, { id: 'diagnosis_id_select', disabled: true, required: true, class: 'form-control' }) %>
          <br/>
        </td>
      </tr>
      <tr>
        <td>
          <%#   %>
          <%= form.submit('Find', class: 'btn btn-primary', id: 'btn_submit_find_diagnosed', data: { disable_with: false }, disabled: true) %>
        </td>
      </tr>
      </tbody>
    </table>
  <% end %>
</fieldset>