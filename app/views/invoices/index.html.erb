<p id="notice"><%= notice %></p>

<h1>Invoices</h1>
<br>
<% content_for(:navigationButtons) do %>
  <%= link_to('New Invoice', new_invoice_path, class: 'btn btn-primary') %>
<% end %>
<table class="table table-bordered table-striped">
  <thead class="thead-light">
  <tr>
    <th>Date</th>
    <th>Datedue</th>
    <th>Paymentrecieved</th>
    <th>Patient</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @invoices.each do |invoice| %>
    <tr>
      <td><%= invoice.date %></td>
      <td><%= invoice.dateDue %></td>
      <td><%= invoice.paymentRecieved %></td>
      <td><%= invoice.admission.patient.person.firstName %></td>
      <td><%= link_to('Show', invoice, class: 'btn btn-secondary') %></td>
      <td><%= link_to('Edit', edit_invoice_path(invoice),class: 'btn btn-secondary') %></td>
      <td><%= link_to('Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary') %></td>
    </tr>
  <% end %>
  </tbody>
</table>



