<p id="notice"><%= notice %></p>

<h1>Invoices</h1>
<br>
<% content_for(:navigationButtons) do %>
  <%= link_to('New Invoice', new_invoice_path, class: 'btn btn-primary') %>
<% end %>
<table class="table table-bordered table-striped">
  <thead class="thead-light">
  <tr>
    <th>Issue Date</th>
    <th>Date Due</th>
    <th>Payment Received</th>
    <th>Date Received</th>
    <th>Patient Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @invoices.each do |invoice| %>
    <tr>
      <td><%= localize(invoice.created_at.to_date) %></td>
      <td><%= localize(invoice.dateDue) %></td>
      <td><%= invoice.paymentReceived %></td>
      <td>
        <% if invoice.dateReceived %>
          <%= localize(invoice.dateReceived) %>
        <% else %>
          <p>--</p>
        <% end %>
      </td>
      <td><%= invoice.admission.patient.person.firstName + ' ' + invoice.admission.patient.person.firstName %></td>
      <td><%= link_to('Show', invoice, class: 'btn btn-secondary') %></td>
      <td><%= link_to('Edit', edit_invoice_path(invoice), class: 'btn btn-secondary') %></td>
      <td><%= link_to('Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary') %></td>
    </tr>
  <% end %>
  </tbody>
</table>



