<tr class="nested-fields">
  <td>
    <div class="form-group">
      <%= f.text_field(:treatment, class: 'treatment form-control', required: true) %>
    </div>
  </td>
  <td>
    <div class="form-group">
      <%= f.text_field(:quantity, type: :number, min: '0', class: 'quantity form-control', required: true) %>
    </div>
  </td>
  <td>
    <div class="form-group">
      <%= f.text_field(:unitPrice, type: :number, step: '0.01', min: '0.00', class: 'unitPrice form-control', required: true) %>
    </div>
  </td>
  <td>
    <div class="form-group">
      <%= f.text_field(:tax, type: :number, step: '0.01', min: '0.00', max: '100.00', class: 'tax form-control', required: true) %>
    </div>
  </td>
  <td>
    <div class="form-group">
      <label class="form-control"><span>Â£</span><span class="lineTotal">0.00</span></label>
      <%= f.hidden_field(:lineTotal, id:'lineTotal') %>
    </div>
  </td>
  <td>
    <div class="form-group">
      <%= link_to_remove_association('Remove', f, class: 'btn btn-danger', role: 'button') %>
    </div>
  </td>
</tr>
