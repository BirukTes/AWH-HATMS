// Remove old validation messages
$("#error_holder_patient_registration").remove();

<%  if @update_patient_fail %>
// Display new validation messages
$('#error_holder_patient_registration').append('<%= escape_javascript(render('shared/errors', model: @patient))%>');
<% end %>

<%  if @update_patient_successful %>
// Display new validation messages
$('#error_holder_patient_registration').append("<div class='alert alert-success'><p>Patient details updated successfully.</p></div>");
<% end %>


