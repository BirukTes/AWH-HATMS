<%= form_with(model: patient, html: { autoComplete: :on, disabled: true }, validate: true) do |patient_form| %>

  <% if controller_name.eql?('admissions') %>
    <%= hidden_field_tag(:update_patient, true) %>
  <% end %>

  <%#	 Determine whether field will be disabled or not for update %>
  <% if controller_name.eql?('treatments') || controller_name.eql?('prescription') %>
    <%= render('patients/form_fields', patient_form: patient_form, patient: patient, disabled: true) %>
  <% else %>
    <%= render('patients/form_fields', patient_form: patient_form, patient: patient, disabled: false) %>
  <% end %>
<% end %>