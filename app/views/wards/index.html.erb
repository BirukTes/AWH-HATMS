<p id="notice"><%= notice %></p>

<h1>Wards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ward No</th>
      <th>Beds</th>
      <th>Available Beds</th>
      <th>Gender</th>
      <th>Department</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wards.each do |ward| %>
      <tr>
        <td><%= ward.name %></td>
        <td><%= ward.wardNumber %></td>
        <td><%= ward.numberOfBeds %></td>
        <td><%= ward.bedStatus %></td>
        <td><%= ward.patientGender %></td>
        <td><%= ward.deptName %></td>
        <td><%= ward.isPrivate %></td>
        <td><%= link_to 'Show', ward %></td>
        <td><%= link_to 'Edit', edit_ward_path(ward) %></td>
        <td><%= link_to 'Destroy', ward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

