<p id="notice"><%= notice %></p>

<h1>Wards</h1>
<br/>
<div class="row">
  <div class="col-1">
    <div class="btn-group mr-3">
      <%= button_tag('Print', class: 'btn btn-outline-secondary mr-3 ', onClick: "printJS({ printable: 'wards_holder', type: 'html', header: 'Wards - #{localize(Date.today).to_s}'})") %>
    </div>
  </div>
</div>
<br/>
<table id="wards_holder" class="table table-bordered table-striped">
  <thead class="thead-light">
  <tr>
    <th>Name</th>
    <th>Ward No</th>
    <th>Beds</th>
    <th>Available Beds</th>
    <th>Gender</th>
    <th>Department</th>
    <th>Private</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @wards.each do |ward| %>
    <tr>
      <td><%= ward.name %></td>
      <td><%= ward.wardNumber %></td>
      <td><%= ward.numberOfBeds %></td>
      <td><%= ward.bedStatus %></td>
      <td><%= ward.patientGender %></td>
      <td><%= ward.deptName %></td>
      <td class="label label-"><%= ward.isPrivate %></td>
      <td><%= link_to 'View', ward, class: 'btn btn-secondary' %></td>
      <td><%= link_to 'Edit', edit_ward_path(ward), class: 'btn btn-secondary' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% content_for(:navigationButtons) do %>
  <%= link_to('Register Ward', new_ward_path, class: 'btn btn-primary') %>
<% end %>