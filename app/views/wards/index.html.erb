<p id="notice"><%= notice %></p>

<h1>Wards</h1>

<table id="wards_holder" class="table table-bordered table-striped">
  <thead class="thead-light">
  <tr>
    <th>Name</th>
    <th>Ward No</th>
    <th>Beds</th>
    <th>Available Beds</th>
    <th>Gender</th>
    <th>Department</th>
    <th>Private</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @wards.each do |ward| %>
    <tr>
      <td><%= ward.name %></td>
      <td><%= ward.wardNumber %></td>
      <td><%= ward.numberOfBeds %></td>
      <td><%= ward.bedStatus %></td>
      <td><%= ward.patientGender %></td>
      <td><%= ward.deptName %></td>
      <td class="label label-"><%= ward.isPrivate %></td>
      <td><%= link_to 'Show', ward, class: 'btn btn-secondary' %></td>
      <td><%= link_to 'Edit', edit_ward_path(ward), class: 'btn btn-secondary' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% content_for(:navigationButtons) do %>
  <%= link_to('New Ward', new_ward_path, class: 'btn btn-primary') %>
  <%= button_tag('Print', onClick: "printJS({ printable: 'wards_holder', type: 'html', header: 'Wards - #{localize(Date.today).to_s}'})", class: 'btn btn-secondary') %>
<% end %>