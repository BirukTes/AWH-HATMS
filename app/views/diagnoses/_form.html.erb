<%= form_with(model: diagnose, local: true) do |form| %>
  <% if diagnose.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diagnose.errors.count, "error") %> prohibited this diagnose from being saved:</h2>

      <ul>
        <% diagnose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field(:admission_id, value: diagnose.admission_id || admission.id) %>

  <div class="row">
    <div class="col-2 offset-1">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field(:title, id: :diagnose_title, class: 'form-control', required: true) %>
      </div>
    </div>
    <div class="col-3 offset-1">
      <div class="form-group">
        <%= form.label(:description) %>
        <%= form.text_area(:description, id: :diagnose_description, class: 'form-control', required: true) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-1 offset-6">
      <div class="actions">
        <%= form.submit(class: 'form-control btn btn-primary') %>
      </div>
    </div>
  </div>
<% end %>
